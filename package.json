{
  "name": "plumet",
  "version": "0.1.0",
  "description": "Plumet: A high-performance, compile-time CSS generator and CLI to transform strictly typed style contracts into static, deterministic CSS files",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/nazahex/plumet",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nazahex/plumet.git"
  },
  "author": "KazViz <kaz@kazviz.com> (https://kazviz.com)",
  "bugs": {
    "url": "https://github.com/nazahex/plumet/issues"
  },
  "keywords": [
    "kazviz",
    "plumet",
    "css",
    "generator",
    "styling"
  ],

  "scripts": {
    "dev": "bun run src/cli.ts -- --help",
    "gen": "bun run src/cli.ts",
    "build": "bun run build:main && bun run build:min && bun run build:type",
    "build:main": "bun build src/index.ts --outdir dist --format esm --target node",
    "build:min": "bun build src/index.ts --outdir dist --entry-naming [name].min.[ext] --format esm --target node --minify",
    "build:type": "bun x dts-bundle-generator --no-check --project tsconfig.json -o dist/index.d.ts src/index.ts",
    "clean": "rm -rf dist .tsbuildinfo",
    "check": "biome check && dprint check",
    "format": "biome check --write && dprint fmt",
    "test": "bun test",
    "ci": "bun run clean && bun run build && bun run check && bun run test",
    "postinstall": "lefthook install"
  },

  "packageManager": "bun@1.3.1",
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.9",
    "dprint": "^0.51.1",
    "lefthook": "^2.0.2",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "dts-bundle-generator": "^9.5.1"
  },
  "peerDependencies": {
    "csstype": "^3.2.3"
  },

  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18"
  },

  "files": [
    "dist"
  ],
  "bin": {
    "plumet": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./min": {
      "default": "./dist/index.min.js",
      "import": "./dist/index.min.js"
    }
  },
  "sideEffects": false,

  "publishConfig": {
    "access": "public",
    "provenance": true
  },

  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
